<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Blue Alert</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="640" height="960" scale="0.8"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <particles>
    <xml>xml/particles.xml</xml>
    <atlas>sprites/Particles/particles_atlas.png</atlas>
  </particles>

</config>